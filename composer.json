{
    "name": "universal-technologies/linkedin-ai",
    "type": "project",
    "description": "Universal Technologies LinkedIn AI Agent - Full Stack Application",
    "keywords": ["laravel", "php", "linkedin", "ai"],
    "license": "MIT",
    "require": {
        "php": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "backend/app/",
            "Database\\Factories\\": "backend/database/factories/",
            "Database\\Seeders\\": "backend/database/seeders/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "cd backend && php artisan config:cache",
            "cd backend && php artisan route:cache",
            "cd backend && php artisan view:cache"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}